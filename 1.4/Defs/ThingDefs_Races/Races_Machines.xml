    <race>RE_Mechanoids_YMIR</race>
    <combatPower>99999</combatPower>
    <lifeStages>
      <li>
        <bodyGraphicData>
          <texPath>Things/Pawn/YMIRmech/YMIRMech</texPath>
          <graphicClass>Graphic_Multi</graphicClass>
          <drawSize>2.8</drawSize>
          <shadowData>
            <volume>(1, 1, 1)</volume>
