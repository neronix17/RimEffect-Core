    <costList>
      <Plasteel>65</Plasteel>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <thingSetMakerTags>
      <li>RE_AllianceWeaponry</li>
    </thingSetMakerTags>
    <tradeTags>
