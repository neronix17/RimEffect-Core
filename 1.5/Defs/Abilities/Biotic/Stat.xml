<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <StatDef>
    <defName>RE_BioticEnergyMax</defName>
    <label>biotic energy limit</label>
    <description>The maximum amount of biotic energy the individual can sustain safely.</description>
    <category>PawnMisc</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0</minValue>
    <hideAtValue>0</hideAtValue>
    <toStringStyle>Integer</toStringStyle>
    <showOnAnimals>false</showOnAnimals>
    <showOnMechanoids>false</showOnMechanoids>
    <showIfHediffsPresent><li>RE_BioticAmpHediff</li></showIfHediffsPresent>
    <displayPriorityInCategory>3500</displayPriorityInCategory>
    <scenarioRandomizable>true</scenarioRandomizable>
  </StatDef>

  <StatDef>
    <defName>RE_BioticEnergyRecoveryRate</defName>
    <label>biotic energy recovery rate</label>
    <description>The rate at which this person recovers biotic energy.</description>
    <category>PawnMisc</category>
    <minValue>0</minValue>
    <hideAtValue>0</hideAtValue>
    <defaultBaseValue>1</defaultBaseValue>
    <toStringStyle>FloatMaxTwo</toStringStyle>
    <formatString>{0}/s</formatString>
    <showOnAnimals>false</showOnAnimals>
    <showOnMechanoids>false</showOnMechanoids>
    <showIfHediffsPresent><li>RE_BioticAmpHediff</li></showIfHediffsPresent>
    <displayPriorityInCategory>6000</displayPriorityInCategory>
  </StatDef>

  <StatDef>
    <defName>RE_BioticAbilityCostMultiplier</defName>
    <label>biotic ability cost multiplier</label>
    <description>How much effort it costs to use biotic energy.</description>
    <category>PawnMisc</category>
    <minValue>0</minValue>
    <hideAtValue>0</hideAtValue>
    <defaultBaseValue>1</defaultBaseValue>
    <toStringStyle>PercentOne</toStringStyle>
    <formatString>{0}</formatString>
    <showOnAnimals>false</showOnAnimals>
    <showOnMechanoids>false</showOnMechanoids>
    <showIfHediffsPresent><li>RE_BioticAmpHediff</li></showIfHediffsPresent>
    <displayPriorityInCategory>4000</displayPriorityInCategory>
  </StatDef>
</Defs>