    </stages>
	<comps>
    <li Class="HediffCompProperties_VerbGiver">
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Stab</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>16</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    </li>
	</comps>
  </HediffDef>
</Defs>