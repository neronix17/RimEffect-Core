<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase">
    <defName>RE_KodiakShuttle</defName>
    <label>kodiak shuttle</label>
    <description>An advanced shuttle propelled using small directional thrusters and a mass effect based repulsion system, the Kodiak Drop Shuttle is a common sight throughout the galaxy thanks to it's robust design and ability to make limited FTL jumps.</description>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <passability>Impassable</passability>
    <fillPercent>1.0</fillPercent>
    <size>(3,6)</size>
    <graphicData>
      <texPath>Things/Building/Misc/KodiakShuttle/KodiakShuttle</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(7,8)</drawSize>
      <shadowData>
        <volume>(1.8, 1.0, 4.1)</volume>
        <offset>(0, 0, -0.1)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <Flammability>1</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <killedLeavings>
      <Plasteel>100</Plasteel>
      <ChunkSlagSteel>4</ChunkSlagSteel>
      <ComponentSpacer>4</ComponentSpacer>
    </killedLeavings>
    <rotatable>true</rotatable>
    <defaultPlacingRot>West</defaultPlacingRot>
    <selectable>true</selectable>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <drawerType>MapMeshOnly</drawerType>
    <repairEffect>ConstructMetal</repairEffect>
    <forceDebugSpawnable>true</forceDebugSpawnable>
    <uiIconScale>1.0</uiIconScale>
    <building>
      <claimable>false</claimable>
      <soundAmbient>ShuttleIdle_Ambience</soundAmbient>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <comps>
    </comps>
    <costList>
      <Plasteel>450</Plasteel>
      <ComponentSpacer>24</ComponentSpacer>
    </costList>
    <researchPrerequisites>
      <li>RE_AllianceKodiak</li>
    </researchPrerequisites>
    <designationCategory>Misc</designationCategory>
    <techLevel>Ultra</techLevel>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>RE_ProtheanBeacon</defName>
    <label>prothean beacon</label>
    <description>Once the primary civilized species in the galaxy, all the Protheans have left behind are in their ruins. These beacons have been the source of most advanced technology in the galaxy, and share their history and lore. Those who have prepared to interact with them may gain knowledge, while others may go insane.</description>
    <graphicData>
      <texPath>Things/Building/Special/ProtheanBeacon/ProtheanBeaconA</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(6, 5)</drawSize>
      <shadowData>
        <volume>(0.3, 0.6, 0.3)</volume>
        <offset>(0.0, 0.0, -0.1)</offset>
      </shadowData>
      <damageData>
        <rect>(0,0.75,1.0,0.5)</rect>
      </damageData>
    </graphicData>
    <uiIconScale>0.85</uiIconScale>
    <size>(3, 3)</size>
    <costList>
      <Plasteel>200</Plasteel>
      <ComponentSpacer>6</ComponentSpacer>
    </costList>
    <altitudeLayer>Building</altitudeLayer>
    <building>
      <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
    </building>
    <statBases>
      <MarketValue>1300</MarketValue>
      <MaxHitPoints>300</MaxHitPoints>
      <Flammability>0</Flammability>
      <Beauty>0</Beauty>
      <Mass>15</Mass>
      <WorkToBuild>2000</WorkToBuild>
    </statBases>
    <fillPercent>0.8</fillPercent>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <passability>Impassable</passability>
    <rotatable>false</rotatable>
    <canOverlapZones>false</canOverlapZones>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>6</glowRadius>
        <glowColor>(0,255,127,0)</glowColor>
      </li>
      <li Class="RimEffect.CompProperties_SpawnOnInteract">
        <thingToSpawn>TechprofSubpersonaCore</thingToSpawn>
        <numToSpawnRange>2~4</numToSpawnRange>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BuildingBase">
    <defName>RE_MakoTank</defName>
    <label>mako tank</label>
    <description>A spacer-tech shuttle designed for transit between surface and orbit, or between moons of a planetary system.</description>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>50</pathCost>
    <blockWind>true</blockWind>
    <passability>Impassable</passability>
    <fillPercent>1.0</fillPercent>
    <size>(3,5)</size>
    <graphicData>
      <texPath>Things/Building/Misc/Mako/PropMako</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(4,6)</drawSize>
      <shadowData>
        <volume>(1.8, 1.0, 4.1)</volume>
        <offset>(0, 0, -0.1)</offset>
      </shadowData>
    </graphicData>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <Flammability>1</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <killedLeavings>
      <Plasteel>80</Plasteel>
      <ChunkSlagSteel>4</ChunkSlagSteel>
      <ComponentSpacer>3</ComponentSpacer>
    </killedLeavings>
    <rotatable>true</rotatable>
    <defaultPlacingRot>West</defaultPlacingRot>
    <selectable>true</selectable>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
    <drawerType>MapMeshOnly</drawerType>
    <repairEffect>ConstructMetal</repairEffect>
    <forceDebugSpawnable>true</forceDebugSpawnable>
    <uiIconScale>1.0</uiIconScale>
    <building>
      <claimable>false</claimable>
      <soundAmbient>ShuttleIdle_Ambience</soundAmbient>
      <destroySound>BuildingDestroyed_Metal_Big</destroySound>
    </building>
    <comps>
    </comps>
    <costList>
      <Plasteel>350</Plasteel>
      <ComponentSpacer>18</ComponentSpacer>
    </costList>
    <researchPrerequisites>
      <li>RE_AllianceKodiak</li>
    </researchPrerequisites>
    <designationCategory>Misc</designationCategory>
    <techLevel>Ultra</techLevel>
  </ThingDef>

</Defs>