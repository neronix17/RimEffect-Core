<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BuildingBase" Name="RE_Sculptures" Abstract="True">
    <thingClass>Building_Art</thingClass>
    <altitudeLayer>BuildingOnTop</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <useHitPoints>true</useHitPoints>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingCategories>
      <li>BuildingsArt</li>
    </thingCategories>
	<techLevel>Ultra</techLevel>
    <thingSetMakerTags><li>RE_Art</li></thingSetMakerTags>
    <statBases>
      <Flammability>1.0</Flammability>
      <SellPriceFactor>1.20</SellPriceFactor>
      <MeditationFocusStrength>0.0</MeditationFocusStrength>
    </statBases>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtSculpture</nameMaker>
        <canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
      <li Class="CompProperties_MeditationFocus">
        <statDef>MeditationFocusStrength</statDef>
        <focusTypes>
          <li>Artistic</li>
        </focusTypes>
        <offsets>
          <li Class="FocusStrengthOffset_Quality">
            <curve>
              <points>
                <li>(0,0.12)</li> <!-- awful -->
                <li>(1,0.16)</li> <!-- poor -->
                <li>(2,0.20)</li> <!-- normal -->
                <li>(3,0.22)</li> <!-- good -->
                <li>(4,0.24)</li> <!-- excellent -->
                <li>(5,0.26)</li> <!-- masterwork -->
                <li>(6,0.28)</li> <!-- legendary -->
              </points>
            </curve>
          </li>
          <li Class="FocusStrengthOffset_BuildingDefsWithQuality">
            <defs>
              <li>SculptureSmall</li>
              <li>SculptureLarge</li>
              <li>SculptureGrand</li>
            </defs>
            <radius>9.9</radius>
            <maxBuildings>8</maxBuildings>
            <focusPerQuality>
              <points>
                <li>(0,0.0)</li> <!-- awful -->
                <li>(1,0.0)</li> <!-- poor -->
                <li>(2,0.01)</li> <!-- normal -->
                <li>(3,0.01)</li> <!-- good -->
                <li>(4,0.01)</li> <!-- excellent -->
                <li>(5,0.02)</li> <!-- masterwork -->
                <li>(6,0.02)</li> <!-- legendary -->
              </points>
            </focusPerQuality>
            <explanationKey>MeditationFocusPerSculpture</explanationKey>
            <explanationKeyAbstract>MeditationFocusPerSculptureAbstract</explanationKeyAbstract>
          </li>
        </offsets>
      </li>
    </comps>
    <placeWorkers>
      <li>PlaceWorker_MeditationOffsetBuildingsNear</li>
    </placeWorkers>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
    <tradeTags>
      <li>RE_Art</li>
    </tradeTags>
    <recipeMaker>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Artistic</workSkill>
      <unfinishedThingDef>UnfinishedSculpture</unfinishedThingDef>
      <effectWorking>Sculpt</effectWorking>
      <soundWorking>Recipe_Sculpt</soundWorking>
      <recipeUsers>
        <li>TableSculpting</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <categories>
          <li>Root</li>
        </categories>
        <disallowedThingDefs>
          <li>Gold</li>
          <li>Silver</li>
          <li>Plasteel</li>
          <li>Jade</li>
          <li>Uranium</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
    </recipeMaker>
    <researchPrerequisites>
      <li>RE_AllianceCooperation</li>
    </researchPrerequisites>
  </ThingDef>
  
  <ThingDef ParentName="RE_Sculptures">
    <defName>RE_SculptureModel</defName>
    <label>ship model</label>
    <description>A piece of material sculpted into an artistic ship model.</description>
    <graphicData>
      <graphicClass>Graphic_Random</graphicClass>
      <texPath>Things/Building/Art/SculptureModel</texPath>
	  <drawOffset>(0,0,0.3)</drawOffset>
    </graphicData>
    <fillPercent>0.25</fillPercent>
    <rotatable>false</rotatable>
	<clearBuildingArea>false</clearBuildingArea>
    <statBases>
      <MaxHitPoints>90</MaxHitPoints>
      <Mass>1</Mass>
      <Beauty>50</Beauty>
      <WorkToMake>14000</WorkToMake>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>30</costStuffCount>
    <building>
	    <isEdifice>false</isEdifice>    
	</building>
  </ThingDef>
  
</Defs>